<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/weather_beijing"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/weathertitle" >

        <Button
            android:id="@+id/btn_weather_back"
            style="@style/back_style"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="#00ffffff"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp" >

        <EditText
            android:id="@+id/txtcityname"
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dip"
            android:layout_marginTop="90dip"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btnfindweather"
        style="@style/weather_style"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dip"
        android:layout_marginTop="20dip"
        android:text="@string/find"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnfindweather2"
        style="@style/weather_style"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dip"
        android:layout_marginTop="20dip"
        android:text="@string/locationfind"
        android:textSize="20sp" />

</LinearLayout>