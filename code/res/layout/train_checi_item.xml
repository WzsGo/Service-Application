<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/train_checi_item_yangshi"
        android:gravity="center"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"
       android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_train_id"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/train_result_checi_item_textcloor"
            android:text="1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_station_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="北京南"
             android:textColor="@color/train_result_checi_item_textcloor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_arrived_time"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="07:11"
             android:textColor="@color/train_result_checi_item_textcloor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_leave_time"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="07:29"
             android:textColor="@color/train_result_checi_item_textcloor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_stay"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="25"
             android:textColor="@color/train_result_checi_item_textcloor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_mileage"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="186km"
             android:textColor="@color/train_result_checi_item_textcloor"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>